/* pages/community/list.wxss */

.container {
  padding-bottom: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.search-bar {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  padding: 0 25rpx;
}

.search-bar icon {
  margin-right: 10rpx;
}

.search-bar input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
}

.publish-btn {
  margin-left: 20rpx;
  padding: 10rpx 30rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
}

.filter-tabs {
  display: flex;
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
}

.tab {
  padding: 20rpx 0;
  margin-right: 40rpx;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #4CAF50;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #4CAF50;
  border-radius: 3rpx;
}

.topic-tags {
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.tags-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
}

.tag {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}

.tag.selected {
  color: #fff;
  background-color: #4CAF50;
}

.post-list {
  padding: 20rpx 30rpx;
}

.post-item {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.post-tag {
  font-size: 24rpx;
  color: #4CAF50;
  padding: 4rpx 16rpx;
  background-color: rgba(76, 175, 80, 0.1);
  border-radius: 20rpx;
}

.post-content {
  padding: 20rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.post-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
  word-break: break-all;
}

.post-images {
  margin-bottom: 20rpx;
}

.single-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 8rpx;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
}

.grid-image {
  width: calc(33.33% - 10rpx);
  height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

.grid-image:nth-child(3n) {
  margin-right: 0;
}

.voice-message {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 15rpx 20rpx;
  width: 260rpx;
}

.voice-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  display: flex;
  align-items: center;
}

.voice-icon image {
  width: 40rpx;
  height: 40rpx;
}

.voice-icon.playing {
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

.voice-duration {
  font-size: 26rpx;
  color: #666;
}

.post-footer {
  display: flex;
  border-top: 1rpx solid #f5f5f5;
  padding: 15rpx 0;
}

.action-btn {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.action-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.empty-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-tips image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.float-btn {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #4CAF50;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.4);
}

.float-btn image {
  width: 60rpx;
  height: 60rpx;
} 