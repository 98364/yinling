/* pages/exercisePlan/detail.wxss */

.container {
  padding-bottom: 40rpx;
  background-color: #f8f8f8;
}

.plan-header {
  position: relative;
  width: 100%;
}

.plan-image {
  width: 100%;
  height: 400rpx;
}

.plan-name {
  position: absolute;
  bottom: 80rpx;
  left: 30rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

.plan-tags {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 8rpx 20rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: rgba(76, 175, 80, 0.8);
  border-radius: 30rpx;
}

.section {
  margin: 30rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.plan-description {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 30rpx;
}

.health-tips {
  background-color: #e8f5e9;
  padding: 20rpx;
  border-radius: 10rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 10rpx;
}

.tip-content {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

.tutorial-swiper {
  height: 600rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.tutorial-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  height: 100%;
}

.step-image {
  width: 90%;
  height: 70%;
  margin-bottom: 20rpx;
}

.step-instruction {
  width: 90%;
}

.step-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 10rpx;
}

.step-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.tutorial-video {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}

.schedule {
  border-radius: 10rpx;
  overflow: hidden;
  border: 1rpx solid #e0e0e0;
}

.schedule-item {
  display: flex;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 20rpx;
}

.schedule-item:last-child {
  border-bottom: none;
}

.schedule-day {
  width: 150rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
}

.schedule-content {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.timer-section {
  margin: 30rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.timer {
  font-size: 80rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.timer-btns {
  display: flex;
  justify-content: center;
}

.btn-timer {
  width: 200rpx;
  height: 80rpx;
  margin: 0 15rpx;
  font-size: 32rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
}

.btn-start {
  background-color: #4CAF50;
  color: #fff;
}

.btn-pause {
  background-color: #FFC107;
  color: #fff;
}

.btn-reset {
  background-color: #fff;
  color: #4CAF50;
  border: 1rpx solid #4CAF50;
}

.btn-section {
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.btn-primary, .btn-secondary {
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.btn-primary {
  background-color: #4CAF50;
  color: #fff;
}

.btn-secondary {
  background-color: #fff;
  color: #4CAF50;
  border: 1rpx solid #4CAF50;
} 