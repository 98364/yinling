/* pages/exerciseRecord/create.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.form-container {
  flex: 1;
  padding: 20rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #555;
}

.icon-right {
  color: #ccc;
  font-size: 32rpx;
}

/* 持续时间控制 */
.duration-control {
  display: flex;
  align-items: center;
}

.btn-adjust {
  width: 60rpx;
  height: 60rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  text-align: center;
  line-height: 56rpx;
  font-size: 40rpx;
  color: #555;
}

.duration-input {
  width: 100rpx;
  text-align: center;
  font-size: 34rpx;
}

.duration-unit {
  margin: 0 20rpx;
  color: #888;
  font-size: 28rpx;
}

/* 日期和时间选择器 */
.picker-value {
  font-size: 32rpx;
  color: #555;
}

/* 备注输入 */
.notes-item {
  height: 250rpx;
}

.notes-input {
  flex: 1;
  height: 180rpx;
  font-size: 30rpx;
  color: #555;
  line-height: 1.5;
}

.notes-count {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: #999;
}

/* 底部按钮 */
.btn-container {
  display: flex;
  padding: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 0 15rpx;
}

.btn-cancel {
  background-color: #f0f0f0;
  color: #666;
}

.btn-save {
  background-color: #4CAF50;
  color: #fff;
}

/* 选择器弹出层 */
.picker-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}

.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1001;
}

.picker-content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  z-index: 1002;
  border-radius: 20rpx 20rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.picker-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
} 