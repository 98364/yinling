/* pages/healthProfile/healthProfile.wxss */

.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* Loading styles */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #666;
}

/* Success message styles */
.success-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.success-text {
  margin-top: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
}

.success-tip {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* Form styles */
.health-profile-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0 30rpx;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 10rpx;
  height: 36rpx;
  width: 8rpx;
  background-color: #4CAF50;
  border-radius: 4rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.input-container {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.form-input {
  flex: 1;
  height: 80rpx;
  font-size: 30rpx;
}

.input-suffix {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}

/* Radio button styles */
.radio-group {
  display: flex;
  flex-wrap: wrap;
}

.radio-group.column {
  flex-direction: column;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

/* Checkbox styles */
.checkboxes {
  display: flex;
  flex-wrap: wrap;
}

.checkbox-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  width: 180rpx;
  transition: all 0.3s;
}

.checkbox-item.active {
  background-color: #E8F5E9;
  border-color: #4CAF50;
  color: #4CAF50;
}

.checkbox-icon {
  margin-left: 10rpx;
}

/* Divider */
.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 30rpx 0 40rpx;
}

/* Action buttons */
.form-actions {
  margin-top: 60rpx;
  padding-bottom: 40rpx;
}

.btn {
  background-color: #4CAF50;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.btn-lg {
  height: 90rpx;
  line-height: 90rpx;
} 